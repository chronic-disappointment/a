                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h3 class="text-center mb-3">
                    Search
                </h3>
                <div class="form-group">
                    <input type="text" name="search" id="search" class="form-control form-control-lg" placehodler="search...">
                </div>
                <div class="match-list"></div>
            </div>
        </div>
    </div>
    <h1>articles: <%-articles.length%></h1>
    <div class="container mt-5 d-flex justify-content-between flex-wrap">
        <%articles.forEach((article,index)=>{%>
        <div class="card mt-5" style="width: 18rem;">
            <img src="<%-article.file%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%-article.title%></h5>
                <p class="card-text"><%-article.description%></p>
                <a href="dashboard/<%-article._id%>" class="btn btn-primary">Diorthwsi</a>
            </div>
            <form action="/admin/dashboard/delete/<%-article._id%>" method="POST">
                <input type="submit" value="delete" name="delete">
            </form>
        </div>
        <%})%>
    </div>
    

